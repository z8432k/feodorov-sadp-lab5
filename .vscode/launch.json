  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/sort_test",
      "args": [
        // "6003",
        //"3",
        //"888"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      // "additionalSOLibSearchPath": "/usr/lib/debug/**",
      "sourceFileMap": {
        // "/build/gsl-MlxlPo/gsl-2.1+dfsg": "${workspaceFolder}/tmp/gsl-2.1+dfsg",
        // "/build/glibc-LK5gWL/glibc-2.23": "${workspaceFolder}/tmp/glibc-2.23"
      },
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "Make"
    }
  ]
}
